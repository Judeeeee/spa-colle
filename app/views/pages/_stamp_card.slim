div class="stamp-card-table max-w-xl mx-auto flex flex-wrap gap-3 p-6 justify-start items-center rounded"
  - wards.each do |ward|
    div class="ward-cell relative flex justify-center items-center text-sm w-[30%] sm:w-[20%] min-h-[100px] rounded text-center whitespace-nowrap bg-white flex-shrink-0 px-4 overflow-hidden"
      span class="absolute right-1 bottom-1 text-lg text-[#8e9b97] font-bold"
        = "#{@visited_facility_counts_by_wards[ward.id] || 0} / #{@facility_counts_by_wards[ward.id] || 0}"
      span class="relative text-base font-bold z-10"
        = ward.name
